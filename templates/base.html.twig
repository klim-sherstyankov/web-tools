<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="verify-admitad" content="fa653c5e59" />
    <title>{% block title %}Онлайн инструменты{% endblock %}</title>
    {% block stylesheets %}
      <link href="{{ asset('asset/index.css') }}" rel="stylesheet" />
      <link rel="icon" type="image/x-icon" href="{{ asset('asset/favicon.ico') }}" />
    {% endblock %}
    {% block head_css %}
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">

    {% endblock %}
    {% block head_js %}
      <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>

      <script type="text/javascript" src="{{ asset('asset/script.js') }}"></script>
    {% endblock %}

  </head>
  <body>
   <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
      <ul class="nav nav-pills">
        <li class="nav-item">
          <a class="nav-link {% if path == '/' %}active{% endif %}" aria-current="page" href="/">Конвертер изображений</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if path == '/generate' %}active{% endif %}" href="/generate">Расчет хеш-суммы</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if path == '/base64' %}active{% endif %}" href="/base64">Работа с форматом Base64</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if path == '/qr' %}active{% endif %}" href="/qr">Работа с QR-кодами</a>
        </li>
        <li class="nav-item">
          <a class="nav-link {% if path == '/ip' %}active{% endif %}" href="/ip">Сеть</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">новые фичи</a>
        </li>
      </ul>
    </nav>
    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div class="flash-{{ label }}">
          {{ message }}
        </div>
      {% endfor %}
    {% endfor %}
    {% block body %}{% endblock %}
    {% block javascripts %}{% endblock %}
  </body>
</html>
